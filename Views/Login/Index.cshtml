@model PartsIq.Models.UserLogin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@section styles{
    <style>
        .image-container {
            position: relative;
            width: 100%;
            height: 100%;
            background: #fff;
        }

        .image-overlay{
            position: absolute;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 3;
        }

        .login-image {
            position: absolute;
            object-fit: cover;
            object-position: top;
            width: 100%;
            height: 100%;
            z-index: 2;
        }
    </style>
}

<div class="backhome">
    <a href="/Login/Signup" class="avatar avatar-sm bg-primary text-white"><i class="bx bx-home-alt fs-sm"></i></a>
</div>

<div class="auth-pages">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-11 col-xl-10">
                <div class="row justify-content-center">
                    <div class="col-md-6 pe-md-0">
                        <div class="image-container">
                            <div class="image-overlay"></div>
                            <img src="~/assets/images/auth/auth-bg.jpg" class="login-image" alt="login-img"/>
                        </div>
                    </div>
                    <div class="col-md-6 ps-md-0">
                        <div class="card mb-0 p-2 p-md-3 border-bl-radius-0 border-tl-radius-0">
                            <div class="card-body p-4">
                                <div class="clearfix">
                                    <img src="~/assets/images/logo.png" height="24" alt="Lettstart Admin">
                                </div>
                                <h5 class="mt-4 fw-semibold">Welcome!</h5>
                                <p class="text-muted mb-4">Enter your username and password to access admin panel.</p>
                                <form id="loginForm" name="loginForm">
                                    <div class="form-group floating-label">
                                        <input type="text" class="form-control form-control-lg" name="Username" id="username">
                                        <label for="username">Username</label>
                                    </div>
                                    <div class="form-group floating-label">
                                        <input type="password" class="form-control form-control-lg" name="Password" id="password">
                                        <label for="password">Password</label>
                                        <div class="validation-error d-none fs-13">
                                            <p>This field is required</p>
                                        </div>
                                    </div>

                                    <div class="form-group text-center d-grid">
                                        <button class="btn btn-primary waves-effect waves-light" data-effect="wave" type="submit">
                                            Log In
                                        </button>
                                    </div>
                                    <div class="clearfix text-center">
                                        <a href="#" class="text-primary">Forgot your password?</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>

@section scripts 
{
    <script>
        const loginForm = document.getElementById('loginForm');
        document.addEventListener('DOMContentLoaded', function () {

            loginForm.addEventListener('submit', function (e) {
                e.preventDefault();
                const formData = new FormData(loginForm);
                const data = Object.fromEntries(formData)

                $.ajax({
                    url: '/Login/LoginUser',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    success: function (res) {
                        if (res.success) {
                            window.location.href = res.redirectUrl
                        } else {
                            alertify.error(res.errorMessage);
                        }

                    },
                    error: function (xhr, status, errorThrown) {
                        console.error('Error:', status, errorThrown);
                        alertify.error('An error occurred. Please try again.');
                    }
                })
            });
        })
    </script>
}
