@model PartsIq.Models.Part

@{
    var Status = Model.IsActive ? "Inactive" : "Active";
    var StatusClass = Model.IsActive ? "danger" : "success";
}

@if (Model == null)
{
    <div>
        <h5>No Part Loaded</h5>
    </div>
}
else
{
    <div class="media mb-3">
        <div class="media-body">
            <h5 class="text-dark fw-semibold mt-2">@Model.Code <i class="bx bxs-badge-check fs-sm align-middle text-success"></i></h5>
            <h6 class="text-muted fw-semibold mt-2 mb-3">@Model.Name</h6>
            <button type="button" data-bs-toggle="modal" data-bs-target="#editPartModal" class="btn btn-primary btn-sm me-1" id="">Edit</button>
            <button type="button" data-status="@Model.IsActive" data-partID="@Model.PartID" id="statusBtn" class="btn btn-@StatusClass btn-sm">Set as @Status </button>
        </div>
    </div>
    <div class="mt-3 pt-2 border-top">
        <h5 class="mb-3 pt-2 fw-semibold text-dark">Part Information</h5>
        <div class="table-responsive">
            <table class="table table-borderless text-muted mb-0 table-sm fs-14">
                <tbody>
                    <tr>
                        <th class="pl-0" scope="row">Model</th>
                        <td>@Model.Model</td>
                    </tr>
                    <tr>
                        <th class="pl-0" scope="row">Document Number</th>
                        <td>@Model.DocNumber</td>
                    </tr>
                    <tr>
                        <th class="pl-0" scope="row">Type</th>
                        <td>@Model.Type</td>
                    </tr>
                    <tr>
                        <th class="pl-0" scope="row">Priority</th>
                        <td>@(Model.Priority == 1 ? "Low Priority" : Model.Priority == 2 ? "Normal Priority" : "High Priority")</td>
                    </tr>
                    <tr>
                        <th class="pl-0" scope="row">File</th>
                        <td>
                            @if (Model.FileAttachment != null)
                            {
                                @Model.FileAttachment.FileName
                            }
                            else
                            {
                                @:"No File Attachment"
                            }
                        </td>
                    </tr>


                </tbody>
            </table>
        </div>
    </div>
}



