@section styles{
    <style>
        .badge-block {
            display: block;
            width: 20px;
            height: 20px;
            border: 1px solid #4B4B5A;
            border-radius: 5px;
        }

        .low-priority {
            background-color: #CDFAD5;
            color: black;
        }

        .normal-priority {
            background-color: #F6FDC3;
            color: black;
        }

        .high-priority {
            background-color: #FF9B9B;
            color: black;
        }

        .priority-started {
            background-color: #EEEEEE;
            color: black;
        }

        .priority-paused {
            background-color: #FFF0D1;
            color: black;
        }
        .urgent {
            background-color: #FF0000;
            color: white;
        }

        input:read-only {
            background-color: #d4d4d4;
        }

        #DateDelivered {
            background-color: transparent;
        }

        .selected-row {
            background-color: #343131;
            color: white;
        }
    </style>
}

