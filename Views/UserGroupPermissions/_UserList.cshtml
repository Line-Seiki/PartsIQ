@model IEnumerable<PartsIq.Models.ViewModels.UserViewModel>


<ul class="list-group">
    @foreach (var user in Model)
    {
       
      <li class="list-group-item d-flex justify-content-between align-items-center">
          <i class="mdi mdi-account ms-2">@user.Name (@user.Email)</i>
          <div class="align-self-end">
              <button type="button" data-user-id="@user.UserId" data-bs-toggle="modal" data-bs-target="#edit-user-modal" class="btn btn-sm btn-primary waves-effect waves-light" data-effect="wave">Edit</button>
              <button type="button" data-user-id="@user.UserId" class="btn btn-sm btn-danger waves-effect waves-light" data-effect="wave">Deactivate</button>
              
          </div>
      </li>

    }
</ul>


